<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_marginStart="6dp"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content"
    tools:ignore="RtlSymmetry">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingEnd="2dp">

        <TextView
            android:id="@+id/priceComparedTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/price_compared_2_sellers"
            android:textColor="#FCB048"
            android:textSize="8sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/trendingcashback_cardId"
            android:layout_width="64dp"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Trending"
            android:textAllCaps="true"
            android:textSize="8sp"
            android:background="@drawable/btn_style"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/priceComparedTitle"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/imageTopCashbackCard"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/mobile_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trendingcashback_cardId" />

        <TextView
            android:id="@+id/trendingcashback_cardtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="4dp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageTopCashbackCard" />

        <TextView
            android:id="@+id/dec"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="10sp"
            android:fontFamily="@font/roboto"
            android:background="@drawable/strike_line_style"
            android:text="Lorem ipsum dolor\n sit amet, "
            android:textColor="#A6A6A6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trendingcashback_cardtitle"
            tools:ignore="SmallSp" />


        <TextView
            android:id="@+id/topcashback_tv_oldamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/strike_line_style"
            android:text="@string/_2500"
            android:textColor="#A6A6A6"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dec" />

        <TextView
            android:id="@+id/currentPriceCardDashBoardhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/_1582"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/topcashback_tv_oldamount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toEndOf="@id/topcashback_tv_oldamount"
            app:layout_constraintTop_toTopOf="@+id/topcashback_tv_oldamount" />

        <TextView
            android:id="@+id/cashbackdetailsdash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_915_cashback"
            android:textColor="@color/darkorange"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topcashback_tv_oldamount"
            tools:ignore="SmallSp,SpUsage" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>